<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".secActivity">

    <TextView
        android:id="@+id/txtDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="飲品"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="加購甜點"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btnCount"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginBottom="52dp"
        android:text="送出"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="168dp"
        android:layout_height="101dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtDrink"
        app:layout_constraintTop_toBottomOf="@+id/txtDrink">

        <RadioButton
            android:id="@+id/rbnCola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可樂 $10" />

        <RadioButton
            android:id="@+id/rbnRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="紅茶 $30" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="168dp"
        android:layout_height="151dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtShop">

        <RadioButton
            android:id="@+id/rbnHaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夏威夷披薩 $100" />

        <RadioButton
            android:id="@+id/rbnMa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美式臘腸披薩 $90" />

        <RadioButton
            android:id="@+id/rbnDgc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地中海披薩 $120" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtShop"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:text="主餐"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup2"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="167dp"
        android:layout_height="101dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <CheckBox
            android:id="@+id/chbSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="戚風蛋糕 $50" />

        <CheckBox
            android:id="@+id/chbBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="黑森林 $90" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/_1562" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/_1563" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2"
        app:layout_constraintTop_toTopOf="@+id/radioGroup2"
        app:srcCompat="@drawable/_1564" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCount"
        app:layout_constraintEnd_toStartOf="@+id/btnCount"
        app:layout_constraintTop_toTopOf="@+id/btnCount"
        app:srcCompat="@drawable/_1572_0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCount"
        app:layout_constraintStart_toEndOf="@+id/btnCount"
        app:layout_constraintTop_toTopOf="@+id/btnCount"
        app:srcCompat="@drawable/_1573_0" />

</androidx.constraintlayout.widget.ConstraintLayout>